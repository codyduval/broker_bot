<h1>All Listings</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Date Entered</th>
    <th></th>
  </tr>

<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.address %> </td>
    <td><%= listing.created_at.to_date.to_formatted_s(:long) %> </td>
    <td></td>
    <td><%= link_to 'View Listing', listing.url, :target => '_blank' %></td>
    <td><%= link_to 'Details', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Delete', listing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

